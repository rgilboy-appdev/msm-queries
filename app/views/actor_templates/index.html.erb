<h1> List of all actors </h1>

<table border="1">
<td> ID </td>
<td> Image </td>
<td> Name </td>
<td> DOB </td>
<td> </td>

<% @actors_list.each do |an_actor| %>

<tr>
  <td> <%= an_actor.id %> </td>
  <td> <img src="<%=an_actor.image%>"> </td>
  <td> <%= an_actor.name %> </td>
  <td> <%= an_actor.dob %> </td>
  <td> <a href="/actors/<%= an_actor.id %>"> Show details </a> </td>

  </tr>

  <% end %>
  
</table>
